.classic-header {
  width: 690rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.header-left {
  display: flex;
}
.day {
  display: flex;
  align-items: baseline;
}
.text1 {
  font-size: 32rpx;
}
.text2 {
  font-size: 58rpx;
  font-weight: bold;
}
.year {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.text3 {
  font-size: 24rpx;
  line-height: 24rpx;
  display: block;
}
.text4 {
  font-size: 20rpx;
  display: block;
}
.header-right {
  display: flex;
}

.header-right .share {
  width: 28rpx;
  height: 28rpx;
}


.classic-body {
  width: 100%;
}
.classic-body .main-pic {
  width: 100%;
  height: 500rpx;
}
.classic-body .sub-pic {
  width: 46rpx;
  height: 142rpx;
  margin-top: -70rpx;
  margin-left: 30rpx;
}
.classic-body .main-text {
  font-size: 34rpx;
  display: block;
  width: 570rpx;
  line-height: 50rpx;
  margin: 25rpx auto 0;
}
.classic-operation {
  background: #f7f7f7;
  border-radius: 3px;
  width: 588rpx;
  height: 80rpx;
  position: absolute;
  bottom: 40rpx;
  text-align: center;
}
.classic-operation image {
  width: 23rpx;
  height: 34rpx;
  position: absolute;
  top: 25rpx;
}
.classic-operation .prevBtn {
  left: 20rpx;
}
.classic-operation .nextBtn {
  right: 20rpx;
}
.classic-operation text {
  font-size: 24rpx;
  line-height: 80rpx;
}
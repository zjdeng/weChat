.classic-header {
  width: 690rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header-right {
  display: flex;
}
.header-right .share {
  width: 28rpx;
  height: 28rpx;
}

.classic-operation {
  background: #f7f7f7;
  border-radius: 3px;
  width: 588rpx;
  height: 80rpx;
  position: absolute;
  bottom: 40rpx;
  text-align: center;
}
.classic-operation image {
  width: 23rpx;
  height: 34rpx;
  position: absolute;
  top: 25rpx;
}
.classic-operation .prevBtn {
  left: 20rpx;
}
.classic-operation .nextBtn {
  right: 20rpx;
}
.classic-operation text {
  font-size: 24rpx;
  line-height: 80rpx;
}